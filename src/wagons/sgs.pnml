item(FEAT_TRAINS, item_sgs_pkp_cargo, 20800) {
    property {
		/* common properties */
        name:                           string(STR_SGS_PKP_CARGO_NAME);
        climates_available:             PKP_CLIMATES; 
        introduction_date:              date(1970, 1, 1);
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   20;
        reliability_decay:              20;
        CARGO_CONTAINER_WAGON_DEFINITION
        loading_speed:                  20;
        cost_factor:                    PURCHASE_COST_SGS;
        running_cost_factor:            RUNNING_COST_CARGO_MEDIUM;
		/* train properties */
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        speed:                          100 km/h;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT);
        refit_cost:                     0;
        track_type:                     RAIL;
        power:                          0;
        running_cost_base:              RUNNING_COST_STEAM;
        cargo_capacity:                 SGS_CAPACITY*CARGO_CONTAINER_WAGON_MULTIPLIER;
        weight:                         22 ton;
        length:                         8;
        visual_effect_and_powered:      visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
        bitmask_vehicle_info:           bitmask(VINFO_CARGO_WAGON);
    }

    graphics {
        purchase:                   sset_sgs_purchase;
        additional_text:            return string(STR_BRAKE_AIR);
        default:                    switch_sgs_graphics;
        articulated_part:           switch_sgs_articulated;
        purchase_cargo_capacity:    return 58*2;
        cargo_capacity:             switch_sgs_cargo_capacity;
        random_trigger:             switch_sgs_graphics;
        loading_speed:              return 20*(cargo_capacity/SGS_CAPACITY);
    }
}
