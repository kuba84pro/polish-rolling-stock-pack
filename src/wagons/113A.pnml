// spritesets
spriteset(sset_113A_purchase, "gfx/113A.png")      { tmpl_sprite_purchase(4, 60) }
spriteset(sset_113Aa_purchase, "gfx/113A.png")      { tmpl_sprite_purchase(4, 120) }
spriteset(sset_113A, "gfx/113A.png")            { tmpl_sprite_train12(4, 20) }
spriteset(sset_113Aa, "gfx/113A.png")            { tmpl_sprite_train12(4, 80) }
spriteset(sset_113A_open, "gfx/113A.png")       { tmpl_sprite_train12(4, 140) }
spriteset(sset_113Aa_open, "gfx/113A.png")      { tmpl_sprite_train12(4, 180) }
