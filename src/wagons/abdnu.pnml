/* OLIWKOWE bwxz switches */

switch(FEAT_TRAINS, SELF, switch_abdnu_articulated, extra_callback_info1) {
    1: return item_dummy_3;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}
switch(FEAT_TRAINS, SELF, switch_bwxz_graphics, (extra_callback_info1&0xFF)==0 && other_veh_is_hidden(1)) {
    1: return sset_bwxz_cut;
    return sgroup_bwxz;
}
switch (FEAT_TRAINS, SELF, switch_abdnu_oliwkowe_add_text, IS_HEATING_CLIMATE ) {
    1: return string(STR_PURCHASE_DESCR_4L, string(STR_BRAKE_AIR), string(STR_HEATING_ST_EL_TEXT), string(STR_ABDNU_OLIWKOWE_TEXT), string(STR_INCOME_1_CLASS));
    return string(STR_PURCHASE_DESCR_3L, string(STR_BRAKE_AIR), string(STR_ABDNU_OLIWKOWE_TEXT), string(STR_INCOME_1_CLASS));
}
/* Define the actual train */
item(FEAT_TRAINS, item_bwxz, 10100) {
    property {
        /* common properties */
        name:                           string(STR_BWXZ_NAME);
        variant_group:                  10102;
        climates_available:             PKP_CLIMATES; 
        introduction_date:              date(1968, 1, 1);
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   20;
        reliability_decay:              20;
        CARGO_PASSENGERS_WAGON_DEFINITION
        loading_speed:                  7;
        cost_factor:                    PURCHASE_COST_ABDNU;
        running_cost_factor:            RUNNING_COST_PASS_EXPRESS;
        /* train properties */
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        speed:                          160 km/h;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT);
        refit_cost:                     0;
        track_type:                     RAIL;
        power:                          0;
        running_cost_base:              RUNNING_COST_STEAM;
        cargo_capacity:                 80;
        weight:                         39 ton;
        length:                         8;
        visual_effect_and_powered:      visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
        bitmask_vehicle_info:           bitmask(VINFO_PASSENGER_WAGON);
    }

    graphics {
        purchase:                   sset_bwxz_purchase;
        additional_text:            switch_abdnu_oliwkowe_add_text;
        default:                    switch_bwxz_graphics;
        articulated_part:           switch_abdnu_articulated;
        cargo_age_period:           switch_old_cargo_age_period;
    }
}

