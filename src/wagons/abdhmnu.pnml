/* A/Bdhmnu switches */
switch(FEAT_TRAINS, SELF, switch_152a_articulated, extra_callback_info1) {
    1: return item_152a;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}
switch(FEAT_TRAINS, SELF, switch_152a_cut_front, other_veh_is_hidden(1)) {
    1: return sset_152a_cut;
    return sgroup_152a;
}
switch(FEAT_TRAINS, SELF, switch_152a_extra_front, 
   [STORE_TEMP(curv_info_prev_cur, 0), STORE_TEMP(curv_info_cur_next, 1),
    STORE_TEMP((LOAD_TEMP(0)<0 && LOAD_TEMP(1)<0)?0:LOAD_TEMP(1), 1),
    STORE_TEMP((LOAD_TEMP(0)>0 && LOAD_TEMP(1)>0)?0:LOAD_TEMP(1), 1),
    LOAD_TEMP(1)]) {
    -2..-1: return sset_152a_l;
    1..2:   return sset_152a_r;
    return switch_152a_cut_front;
}
switch(FEAT_TRAINS, SELF, switch_152a_front, (extra_callback_info1&0xFF)==0) {
    1: return switch_152a_extra_front;  // viewport
    return sgroup_152a;
}
switch(FEAT_TRAINS, SELF, switch_152a_rear, (extra_callback_info1&0xFF)==0 && curv_info_prev_cur==0 && other_veh_z_offset(-1)==0 ) {
    1: return sgroup_152a_rear;  // viewport & no curves
    return sset_dummy;
}
switch(FEAT_TRAINS, SELF, switch_152a_graphics, position_in_vehid_chain % 2) {
    1: return switch_152a_rear;
    return switch_152a_front;
}
switch(FEAT_TRAINS, SELF, switch_abdhmnu_length, position_in_vehid_chain % 2) {
    1: return 4;
    return 8;
}
switch (FEAT_TRAINS, SELF, switch_152a_add_text, IS_HEATING_CLIMATE ) {
    1: return string(STR_PURCHASE_DESCR_4L, string(STR_BRAKE_AIR), string(STR_HEATING_ELECTRIC_TEXT), string(STR_152A_TEXT), string(STR_INCOME_1_CLASS));
    return string(STR_PURCHASE_DESCR_3L, string(STR_BRAKE_AIR), string(STR_152A_TEXT), string(STR_INCOME_1_CLASS));
}

// 54 for 1 class, 80 for 2

/* Define the actual train */
item(FEAT_TRAINS, item_152a, 11100) {
    property {
        /* common properties */
        name:                           string(STR_152A_NAME);
        variant_group:                  11104;
        climates_available:             PKP_CLIMATES; 
        introduction_date:              date(2003, 1, 1);
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   20;
        reliability_decay:              20;
        CARGO_PASSENGERS_WAGON_DEFINITION
        loading_speed:                  7;
        cost_factor:                    PURCHASE_COST_ABDHMNU;
        running_cost_factor:            RUNNING_COST_PASS_EXPRESS+1;
        /* train properties */
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        speed:                          200 km/h;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT);
        refit_cost:                     0;
        track_type:                     RAIL;
        power:                          0;
        running_cost_base:              RUNNING_COST_STEAM;
        cargo_capacity:                 54/2;
        weight:                         48 ton;
        length:                         8;
        visual_effect_and_powered:      visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
        bitmask_vehicle_info:           bitmask(VINFO_PASSENGER_WAGON, VINFO_HIGH_SPEED_WAGON);
    }

    graphics {
        purchase:                   sset_152a_purchase;
        additional_text:            switch_152a_add_text;
        default:                    switch_152a_graphics;
        articulated_part:           switch_152a_articulated;
        length:                     switch_abdhmnu_length;
        cargo_age_period:           switch_new_cargo_age_period;
    }
}

