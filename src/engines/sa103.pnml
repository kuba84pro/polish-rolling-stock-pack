spritegroup sgroup_sa103_pom {
    loaded:     [sset_sa103_pom];
    loading:    [sset_sa103_pom_open];
}
spritegroup sgroup_sa103_podk {
    loaded:     [sset_sa103_podk];
    loading:    [sset_sa103_podk_open];
}
